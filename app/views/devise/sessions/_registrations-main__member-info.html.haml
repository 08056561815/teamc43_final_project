.main-login
  .main-container
    .main-head
      %P アカウントをお持ちでない方はこちら
      = link_to new_user_registration_path, class: "btn-default", id: "btn-registration"do
        新規会員登録
    .main-login-inner
      .main-content
        = link_to "#", class: "btn-default", id: "btn-facebook"do
          %i.fab.fa-facebook-square
          Facebookで登録
        = link_to "#", class: "btn-default", id: "btn-google"do
          %i.fab.fa-google-plus-g
          Googleで登録
    .login-inner
      .member-info-content
        .member-info-content__form.first-child
          = f.email_field :email, autocomplete: "email", class: 'member-info-content__form__input', placeholder: "メールアドレス"
        .member-info-content__form
          = f.password_field :password, autocomplete: "current-password", class: 'member-info-content__form__input', placeholder: "パスワード"
        = f.submit "ログイン",class: "member-info-content__btn"
        .member-info-content__text-left
          %P.member-info-content__text-left__paragraph
            = link_to "#",class: "member-info-content__text-left__paragraph__link" do
              パスワードをお忘れの方







